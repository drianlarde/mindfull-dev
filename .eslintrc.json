{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "never"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 80,
        "endOfLine": "lf"
      }
    ]
  }
}
